@model CVMLabs.Domain.Entities.SubjectModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="editSubjectModalLabel">Edit subject</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <form method="post" id="editSubjectForm" asp-controller="Account" asp-action="EditSubject" asp-route-id=@Model.Id>
            <label for="editSubjectInput" class="form-label">Student name:</label>
            <input type="text" class="form-control" id="editSubjectInput" asp-for="SubjectTitle" value="@Model.SubjectTitle" />
            <span asp-validation-for="SubjectTitle"></span>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success" form="editSubjectForm">Save changes</button>
    </div>
</div>