@model CVMLabs.Domain.Entities.LessonModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="editLessonModalLabel">Edit lesson</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <form method="post" id="editLessonForm" asp-controller="Table" asp-action="EditLesson" asp-route-id=@Model.Id>
            <label for="editLessonInput" class="form-label">Lesson date:</label>
            <input type="date" class="form-control" id="editDateInput" asp-for="LessonDate" />
            <input type="hidden" asp-for="Subject.Id" />
            <input type="hidden" asp-for="Subject.SubjectTitle" />
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success" form="editLessonForm">Save changes</button>
    </div>
</div>